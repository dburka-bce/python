{
  "metadata": [
    {
      "src": [
        {
          "files": [
            "src/**.csproj"
          ]
        }
      ],
      "dest": "api",
      "disableGitFeatures": false,
      "disableDefaultFilter": false
    }
  ],
  "build": {
    "content": [
      {
        "files": [
          "softec/**.yml",
          "softec/**.md",          
          "softeng/**.yml",
          "softeng/**.md",
          "adatb/**.md",
          "adatb/**/toc.yml",
          "python_basic/**.yml",
          "python_basic/**.md",
          "python_psz/**.yml",
          "python_psz/**.md",
          "python_advanced/**.yml",
          "python_advanced/**.md",
          "toc.yml",
          "*.md"
        ]
      }
    ],
    "resource": [
      {
        "files": [
          "images/**",          
          "python_basic/**.zip",
          "python_basic/**.docx",
          "python_basic/**.txt",
          "python_basic/**.png",
          "python_basic/**.jpg",
          "python_basic/**.csv",          
          "python_psz/**.zip",
          "python_psz/**.docx",
          "python_psz/**.txt",
          "python_psz/**.png",
          "python_psz/**.jpg",
          "python_psz/**.csv",
          "python_advanced/**.zip",
          "python_advanced/**.docx",
          "python_advanced/**.txt",
          "python_advanced/**.png",
          "python_advanced/**.jpg",
          "python_advanced/**.csv",          
          "softec/**.zip",
          "softec/**.docx",
          "softec/**.txt",
          "softec/**.png",
          "softec/**.jpg",
          "softec/**.csv",
          "softeng/**.txt",
          "softeng/**.png",
          "softeng/**.jpg",
          "softeng/**.jpeg",
          "softeng/**.gif",
          "softeng/**.zip"
        ]
      }
    ],
    "overwrite": [
      {
        "files": [
          "apidoc/**.md"
        ],
        "exclude": [
          "obj/**",
          "_site/**"
        ]
      }
    ],
    "dest": "_site",
    "globalMetadataFiles": [],
    "fileMetadataFiles": [],
    "template": [

      "./_templates/default"
    ],
    "postProcessors": [],
    "markdownEngineName": "markdig",
    //"markdownEngineProperties": {
    //  "markdigExtensions": [ "mathematics", "emoji" ]
    //},
    "noLangKeyword": false,
    "keepFileLink": false,
    "cleanupCacheHistory": false,
    "disableGitFeatures": false
    //"markdown": {
    //  "extensions": [ "Markdig.Mathematics" ]
    //}
  }

}
